{
  "name": "@vogt-ai/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=../../.env src/index.ts",
    "build": "pnpm --filter @vogt-ai/marketing build && pnpm --filter @vogt-ai/web build && rm -rf ./static && mkdir -p ./static/marketing ./static/app && cp -r ../marketing/dist/* ./static/marketing && cp -r ../web/dist/* ./static/app",
    "start": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@e2b/code-interpreter": "^2.3.3",
    "@hono/node-server": "^1.13.8",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.7.4",
    "postgres": "^3.4.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  }
}
