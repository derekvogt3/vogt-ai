<section id="services" class="px-6 py-24">
  <div class="mx-auto max-w-6xl">
    <div class="mb-16 text-center">
      <p class="mb-2 text-sm font-medium tracking-widest text-blue-400 uppercase">What We Do</p>
      <h2 class="text-4xl font-bold tracking-tight text-white">Services</h2>
    </div>
    <div class="grid gap-6 md:grid-cols-2">
      {services.map((service) => (
        <div class="group rounded-xl border border-zinc-800 bg-zinc-900/50 p-8 transition hover:border-zinc-700">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-blue-600/10">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-blue-400"
            >
              <path d={icons[service.icon]} />
            </svg>
          </div>
          <h3 class="mb-3 text-xl font-semibold text-white">{service.title}</h3>
          <p class="leading-relaxed text-zinc-400">{service.description}</p>
