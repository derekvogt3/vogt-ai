  },
  {
    title: "Process Automation",
    description:
      "Identify high-value automation opportunities and build intelligent workflows that reduce manual effort and improve accuracy.",
    icon: "zap",
  },
  {
    title: "Custom AI Solutions",
    description:
      "RAG pipelines, AI agents, conversational interfaces, and more — purpose-built for your business requirements and data.",
    icon: "code",
  },
];

const icons: Record<string, string> = {
  rocket: "M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.63 8.37m5.96 6 a6 6 0 0 1-5.84 7.38m0 0A14.98 14.98 0 0 1 3.63 8.37",
